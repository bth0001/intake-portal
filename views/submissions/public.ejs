    .showRequests, .showInquiries {cursor:pointer;}
    .fullCol {width:100%;}

    /* tables*/
    .table.graph {padding:0 0 25px;}
    .table .column {width:200px;}
    .table .column .cell {padding:0 5px; text-align:center; width:100%;}
