    .row:last-child {border-bottom:solid 1px #E6E7EF;}
    .row .cell {margin:0; padding:15px; text-align:left;}
    .row .cell.email {flex-grow:1; text-align:left;}
    .row .cell.name {width:75%;}
    .row .cell.status {width:10%;}
