<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>
  <section id="header">
    <div class="container flexbox flexJustify">
      <div id="logo">
        <a href="https://www.televox.com"><img src="https://webtools1.televoxsites.com/west-automated-notifications/includes/images/west_logo.png"></a>
      </div><!-- end logo -->
    </div><!-- end header container -->
  </section><!-- end header -->
  <section class="pageTitle">
    <div class="container">
      <h1><%= title %></h1>
    </div><!-- end pageTitle container -->
  </section><!-- end pageTitle -->

  <div id="content">
    <div class="container">
      <div id="template" class="login">
        <div class="container flexbox">
          <% if(error && error.length > 0){ %>
            <div id="alertMessage" class="alert alert-danger" role="alert">
              <%= error %>
            </div>
          <% } %>
          <% if(success && success.length > 0){ %>
            <div id="alertMessage" class="alert alert-success" role="alert">
              <%= success %>
            </div>
          <% } %>
          <div id="login">
            <form class="form" action="/view-inquiries" method="POST">
              <div class="wrapper flexbox">
                <div class="password flexbox">
                  <input name="accessCode" placeholder="Access Code" type="text">
                </div>
                <button class="login">Sign In</button>
              </div>
            </form>
          </div><!-- End login --> 
        </div><!-- End Template Container -->
      </div><!-- Template -->
    </div><!-- Content Container -->
  </div><!-- Content -->

  <script>
    // when you click the purple arrow beside a task it expands for further info
    $('#accordion .fa-angle-down').click(function() {
      $(this).parent().next('.expanded').slideToggle();
      $("#accordion .fa-angle-down").toggleClass("fa-angle-up");
    });
  </script>
</body>
</html>
