<% include partials/header %>

  <section class="pageTitle">
    <div class="container">
      <h1><%= title %></h1>
    </div><!-- end pageTitle container -->
  </section><!-- end pageTitle -->

  <style>
    @import url('https://fonts.googleapis.com/css?family=Roboto:400,500,700|Roboto+Condensed:300,400,700|Raleway:300,400,600');
    
    input:-webkit-autofill, textarea:-webkit-autofill, select:-webkit-autofill {-webkit-box-shadow: 0 0 0 30px white inset;}

    /* ====== Template ====== */
    #template.login {background-image: -webkit-gradient(linear, left top, right bottom, from(#2638b0), color-stop(#0060c8), color-stop(#007fcb), color-stop(#0099c2), to(#00b0b7));
background-image: linear-gradient(to right bottom, #2638b0, #0060c8, #007fcb, #0099c2, #00b0b7); height: auto !important;}
    #template.login .container {-webkit-box-align: center;-ms-flex-align: center;align-items: center; -webkit-box-pack: center; -ms-flex-pack: center; justify-content: center; height: auto !important;}
    
    input::-moz-placeholder,
    input:-moz-placeholder {color:#ada9bb; font-family: 'Roboto Condensed', sans-serif; font-size: 1.125em; opacity: 1;}
    #login {max-width: 500px; text-align: center;}
    #login .form {background: rgba(50,10,100,.2); padding: 2.5em;}
    #login input {border: none; max-width: 60%; padding: 15px; width: 100%;}
    #login .email input {border-bottom: 1px solid #ada9bb;}
    #login .signUp {background: rgba(50,10,100,.4); color: #fff; padding: 2.5em;}
    #login .wrapper {-webkit-box-pack: center;-ms-flex-pack: center;justify-content: center;}
    #login .wrapper > div {-webkit-box-pack: center;-ms-flex-pack: center;justify-content: center; width: 100%;}
    #login .title, #login .subtitle, #login .subtext {color: #fff;}
    
    #login .title {font-family: 'Raleway', sans-serif; font-size: 2.25em; font-weight: 400; margin: 10px 0;}
    #login .subtitle {font-family: 'Roboto Condensed', sans-serif; font-size: 1.375em; font-weight: 400;}
    #login .subtext {font-family: 'Roboto Condensed', sans-serif; font-size: 1.025em; font-weight: 400; margin: 1em 0 2.5em;}
    
    #login a {width: 100%;}
    #login a:hover {text-decoration: none;}
    #login button,
    #login legend, #login a legend {border: none; color: #fff; font-family: 'Roboto Condensed', sans-serif; font-size: 1.25em; font-weight: 700; max-width: 60%; padding: 15px; width: 100%; -webkit-transition: background 0.3s; transition: background 0.3s; border-radius: 0;}
    #login button {background: #00C49B; margin: 5px 0; cursor: pointer;}
    #login legend {background: #00B0B7;}
    #login a legend {margin: 0 auto;}
    #login legend a, #login button a {color: #fff;}
    #login .signUp button {background: none; border: 1px solid #C7FCEB; letter-spacing: 1px; text-transform: uppercase; margin-top: 10px; color: #fff; cursor: pointer;}
    #login .signUp button:hover {color: #1456A0; text-decoration: none;}

    #login button:hover, .upload-btn-wrapper:hover .btn {background:none; -webkit-box-shadow: inset 0px 0px 0px 1px rgba(0, 196, 155, 1); box-shadow: inset 0px 0px 0px 1px rgba(0, 196, 155, 1);}
    #login legend:hover {background:none; -webkit-box-shadow: inset 0px 0px 0px 1px rgba(0, 176, 183, 1); box-shadow: inset 0px 0px 0px 1px rgba(0, 176, 183, 1);}
    #login .signUp button:hover {background:#C7FCEB; -webkit-box-shadow: none; box-shadow: none;}
    #login .signUp button:hover a {color: #1456A0;}

    .profileForm label {flex: 30%; margin: 0 5px;}
    .profileForm .btn {border: 2px solid #2637B0; color: #fff; background-color: #2637B0; padding: 8px 20px; border-radius: 8px; font-size: 20px; font-weight: bold;}
  </style>

  <div id="template" class="login">
    <div class="container flexbox">

      <div id="login">

        <form class="form" action="/signup" method="POST">
          <div class="subtitle">Welcome to the</div>
          <div class="title">Signup Page</div>
          <div class="wrapper flexbox">
            <div class="email flexbox">  
              <input name="name" placeholder="Name" type="text">
            </div>
            <div class="email flexbox">  
              <input name="username" placeholder="Username" type="text">
            </div>
            <div class="email flexbox">  
              <input name="email" placeholder="Email" type="text">
            </div>
            <div class="email flexbox">
              <input name="password" placeholder="Password" type="password">
            </div>
            <div class="email flexbox">  
              <select class="role flexbox" name="role">
                <option value="">Select Your Role</option>
                <option value="Admin">Admin</option>
              </select>
            </div>
          
            <button type="submit" class="login">Sign Up</button>
            <legend class="forgot"><a href="/login">Login</a></legend>
          
          </div>     
        </form>
      </div><!-- End login -->
    </div><!-- End wrapper -->
  </div><!-- End template -->
  
  <div id="back-to-top" ></div>
  
  <!--- JavaScript ---> 
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script> 
  
<% include partials/footer %>
        